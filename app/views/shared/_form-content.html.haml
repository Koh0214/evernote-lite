-if @note.nil?
  #barba-wrapper
    .barba-container
      .content
        .content__header
          .content__header__new-note-icon
            = link_to new_note_folder_note_path(@note_folder) do
              %img{class: "notes__header__new-note-icon new-note-icon", :alt => "evernote-lite", :border => "0", :src => "https://s3-ap-northeast-1.amazonaws.com/chatspace-development/uploads/message/image/600/notePlus2.png"}/
              新規ノートを作成してください！
-else
  #barba-wrapper
    .barba-container
      = form_for [@note_folder, @note] do |f|
        .form-content
          .form-content__header
            = link_to new_note_folder_note_path(@note_folder) do
              %img{class: "form-content__header__icon new-note-icon", :alt => "evernote-lite", :border => "0", :src => "https://s3-ap-northeast-1.amazonaws.com/chatspace-development/uploads/message/image/600/notePlus2.png"}/

            = f.text_field :title, placeholder: 'タイトルがありません', class: 'form-content__header__note-title'

            -# = link_to note_folder_note_path(@note_folder, @note), method: :delete do
            %img{class: "form-content__header__icon delete-note-icon", :alt => "evernote-lite", :border => "0", :src => "https://s3-ap-northeast-1.amazonaws.com/chatspace-development/uploads/message/image/601/removeNoteKai.png"}/

          .form-content__body
            = f.text_area :body, placeholder: '本文がありません', class: 'form-content__body__text'
