.registration__wrapper
  .top-bar

  .registration__top
    %img{class: "evernote-lite__logo", :alt => "evernote-lite", :border => "0", :height => "65", :width => "auto", :src => "https://s3-ap-northeast-1.amazonaws.com/chatspace-development/uploads/message/image/595/folder_plus.png"}/
    %h1 フォルダの作成
  .registration__form
    = form_for @note_folder do |f|
      .field
        = f.text_field :name, autofocus: true, placeholder: 'フォルダ名', class: 'registration__form__field'
      .button
        = f.submit "フォルダを作成", class: 'registration__form__button'
