!!!
%html
  %body
    .top-bar
    .wrapper
      .notes
        .notes__header
          = link_to note_folders_path do
            %img{class: "notes__header__go-folders-icon", :alt => "evernote-lite", :border => "0", :src => "https://cdn-ak.f.st-hatena.com/images/fotolife/k/kochan214/20170215/20170215154546.png"}/
          = link_to edit_user_registration_path do
            .notes__header__name #{current_user.name}
          = link_to new_note_path do
            %img{class: "notes__header__new-note-icon", :alt => "evernote-lite", :border => "0", :src => "https://cdn-ak.f.st-hatena.com/images/fotolife/k/kochan214/20170215/20170215160111.png"}/
        .notes__search-bar
        .notes__body
          = render @notes
      = render partial: "shared/content"
