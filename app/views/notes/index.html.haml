!!!
%html
  %body
    .top-bar
    .wrapper
      .notes
        .notes__header
          = link_to note_folders_path do
            %img{class: "notes__header__back-icon", :alt => "evernote-lite", :border => "0", :src => "https://s3-ap-northeast-1.amazonaws.com/chatspace-development/uploads/message/image/591/3.png"}/
          = link_to edit_user_registration_path do
            .notes__header__name #{current_user.name}
          = link_to new_note_path do
            %img{class: "notes__header__new-note-icon", :alt => "evernote-lite", :border => "0", :src => "https://s3-ap-northeast-1.amazonaws.com/chatspace-development/uploads/message/image/596/note_plus.png"}/
        .notes__search-bar
        .notes__body
          = render @notes
      = render partial: "shared/content"
