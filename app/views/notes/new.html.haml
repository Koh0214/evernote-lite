.registration__wrapper
  .top-bar

  .registration__top
    %img{class: "evernote-lite__logo", :alt => "evernote-lite", :border => "0", :height => "90", :width => "auto", :src => "https://s3-ap-northeast-1.amazonaws.com/chatspace-development/uploads/message/image/596/note_plus.png"}/
    %h1 ノートの作成
  .registration__form
    = form_for @note do |f|
      .field
        = f.text_field :title, autofocus: true, placeholder: 'ノートタイトル', class: 'registration__form__field'
      .field
        = f.text_field :body, autofocus: true, placeholder: '本文', class: 'registration__form__field'
      .button
        = f.submit "ノートを作成", class: 'registration__form__button'
