.sign-up__wrapper
  .top-bar

  .sign-up__top
    %img{class: "evernote-lite__logo", :alt => "evernote-lite", :border => "0", :height => "68", :src => "https://s3-ap-northeast-1.amazonaws.com/chatspace-production/uploads/message/image/21/001.gif", :width => "68"}/
    %h1 アカウント作成
  .sign-up__form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .field
        = f.text_field :name, autofocus: true, placeholder: '名前', class: 'sign-up__form__field'
      .field
        = f.email_field :email, autofocus: true, placeholder: 'メールアドレス', class: 'sign-up__form__field'
      .field
        = f.password_field :password, autocomplete: "off", placeholder: 'パスワードを設定(6文字以上)', class: 'sign-up__form__field'
      .field
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: '確認用パスワードを入力してください', class: 'sign-up__form__field'
      .sign-up__form__confirmation-sentence アカウントを作成 をクリックすると、サービス利用規約とプライバシーポリシーに同意したとみなされます。
      .button
        = f.submit "アカウントを作成", class: 'sign-up__form__button'

  .sign-up__bottom
    = render "users/shared/links"
